# AI Games Slack App - Environment Configuration

# Node.js Environment
NODE_ENV=production
PORT=3000
HTTP_PORT=3001

# Slack App Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# Supabase Database Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# LLM Configuration (LiteLLM)
LLM_MODEL=gemini/gemini-1.5-flash
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.3

# Google Gemini API Key (for LiteLLM)
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: OpenAI API Key (if you want to use OpenAI models via LiteLLM)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Challenge Configuration
CHALLENGE_CHANNEL_ID=general
SCHEDULER_API_KEY=your-secure-scheduler-api-key

# Admin Configuration (comma-separated Slack user IDs)
ADMIN_USERS=U1234567890,U0987654321

# Security Configuration
# Rate limiting settings (optional overrides)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000