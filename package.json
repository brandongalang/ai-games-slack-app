{
  "name": "ai-games-slack-app",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "dev:debug": "ts-node --inspect=0.0.0.0:9229 src/app.ts",
    "dev:watch": "nodemon --exec ts-node src/app.ts",
    "docker:build": "docker build -t ai-games-slack-app .",
    "docker:dev": "docker-compose --profile dev up",
    "docker:prod": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy": "./scripts/deploy.sh",
    "health-check": "node scripts/health-check.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0"
  },
  "dependencies": {
    "@slack/bolt": "^4.4.0",
    "@supabase/supabase-js": "^2.50.0",
    "@types/express": "^5.0.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.1",
    "axios": "^1.6.7",
    "dompurify": "^3.2.6",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsdom": "^26.1.0",
    "litellm": "^0.12.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
